<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_bg_color">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_gravity="top"
        android:minHeight="?attr/actionBarSize"
        style="@style/ToolbarStyle"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_fashion"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/tv_congrats_premium_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginTop="25dp"
                android:text="@string/congrats_premium_title"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="@font/arial_bold"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/tv_congrats_premium_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/congrats_premium_body"
                android:textSize="17sp"
                app:fontFamily="@font/arial_bold"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>