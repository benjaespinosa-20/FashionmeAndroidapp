<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="mx.app.fashionme">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.vending.BILLING"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="mx.app.fashionme.ui.app.FashionMeApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".view.DataRegisterClotheActivity"></activity>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/icon_logo_white" />
        <!--
             Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />
        <meta-data
            android:name="firebase_messaging_auto_init_enabled"
            android:value="false" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name=".ui.modules.home.controller.HomeController">
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
             </intent-filter>
        </activity>
        <activity android:name=".view.CategoryActivity" />
        <activity android:name=".view.SubcategoryActivity" />
        <activity android:name=".view.ClotheActivity" />
        <activity android:name=".view.ClotheDetailActivity" />
        <activity android:name=".view.ColorTestActivity" />
        <activity android:name=".view.UserProfileActivity" />
        <activity android:name=".view.CharacteristicActivity" />
        <activity
            android:name=".view.LoginActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".view.BodyActivity" />
        <activity android:name=".view.WelcomeActivity" />
        <activity android:name=".BuildingActivity" />
        <activity android:name=".view.ResultActivity" />
        <activity android:name=".view.TrendActivity" />
        <activity android:name=".view.TipActivity" />
        <activity android:name=".view.StyleTestActivity" />
        <activity android:name=".view.ExtraTestActivity" />
        <activity android:name=".view.DressCode" />
        <activity android:name=".view.MakeLookActivity" />
        <activity android:name=".view.StyleResultActivity" />
        <activity android:name=".view.WayDressingActivity" />
        <activity android:name=".view.CalendarActivity" />
        <activity android:name=".view.LooksActivity" />
        <activity android:name=".view.StartActivity" />
        <activity android:name=".view.WeatherActivity" />
        <activity android:name=".view.RecommendationActivity" />
        <activity android:name=".view.ChatActivity" />
        <activity android:name=".view.ShoppingActivity" />
        <activity android:name=".view.FavoriteActivity" />
        <activity android:name=".view.JourneyActivity" />
        <activity android:name=".view.ShowJourneyActivity" />
        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/title_activity_settings_profile"
            android:parentActivityName=".view.UserProfileActivity"
            android:theme="@style/AppTheme.ActionBar"
            tools:targetApi="jelly_bean" />
        <activity
            android:name=".settings.OtherSettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.modules.home.controller.HomeController"
            tools:targetApi="jelly_bean" />
        <activity android:name=".view.ChecklistActivity" />
        <activity android:name=".view.ChatAssessorActivity" />
        <activity android:name=".view.AssessorContactsActivity" />
        <activity android:name=".view.FaceActivity" />
        <activity android:name=".view.VisageActivity" />
        <activity
            android:name=".view.VisageDetailActivity"
            android:parentActivityName=".view.VisageActivity"
            tools:targetApi="jelly_bean" />
        <activity android:name=".view.MakeupActivity" />
        <activity android:name=".view.MediaImageActivity" />
        <activity android:name=".view.MediaVideoActivity" />
        <activity android:name=".view.ClientProfileActivity" />
        <activity
            android:name=".view.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".view.CameraMakeupActivity" />
        <activity
            android:name=".view.CameraActivity"
            android:configChanges="orientation|screenLayout|keyboardHidden"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_camera"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".view.CongratsActivity" />
        <activity
            android:name=".settings.ColorsPreference"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="mx.fashionme.opencolors" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MyClosetActivity"
            android:label="@string/title_activity_my_closet"
            android:parentActivityName=".view.UserProfileActivity"
            android:theme="@style/AppTheme.NoActionBar"
            tools:targetApi="jelly_bean" />
        <activity
            android:name=".view.RegisterClosetActivity"
            android:label="@string/title_activity_register_closet"
            android:parentActivityName=".view.MyClosetActivity"
            android:theme="@style/AppTheme.NoActionBar"
            tools:targetApi="jelly_bean" />

        <service android:name=".firebase.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="firebase_messaging_auto_init_enabled"
            android:value="true" />
    </application>

</manifest>